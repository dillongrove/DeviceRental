
<h1>Rentals</h1>
  <table class="table">
  <thead>
    <th>Rental</th>
    <th>Stage</th>
    <th>Due Back</th>
    <th>Device</th>
    <th>&nbsp;</th>
  </thead>
  <% for rental in @rentals %>
    <tr>
      <td><%= link_to rental, rental_path(rental) %></td>
      <td><%= rental.stage %></td>
      <td><%= rental.end_date.strftime("%B %d, %Y") %>
      <td>
        <%= link_to("Edit", edit_rental_path(rental))  %>&nbsp;
        <%= link_to("Delete", rental_path(rental), :confirm => 'Are you sure you wish to delete this information?', :method => :delete) %>
      </td>
    </tr>
  <% end %>
</table>