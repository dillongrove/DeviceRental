
<h1>Rentals</h1>
  <table class="table">
  <thead>
    <th>Rental</th>
    <th>Number Devices</th>
    <th>&nbsp;</th>
  </thead>
  <% for rental in @rentals %>
    <tr>
      <td><%= link_to rental.name, rental_path(rental) %></td>
    <td><%= rental.devices.count %></td>
    <td>
      <%= link_to("Edit", edit_rental_path(rental))  %>&nbsp;
      <%= link_to("Delete", rental_path(rental), :confirm => 'Are you sure you wish to delete this information?', :method => :delete) %>
    </td>
    </tr>
  <% end %>
</table>